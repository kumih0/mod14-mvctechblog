<!-- Page content-->
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-1">{{title}}</h1>
                    <!-- Post meta content-->
                    <div class="text-muted fst-italic mb-2">{{createdAt}}</div>
                    <div class="text-muted fst-italic mb-2">Posted by {{username}}</div>
                </header>
                <!-- Post content-->
                <section class="mb-5">
                    <p class="fs-5 mb-4">{{{content}}}</p>
                </section>
                <div class="text-muted fst-italic mb-2">Comments: {{comments.length}}</div>
            </article>
            <!-- Comments section-->
            <section class="mb-5">
                <div class="card bg-light">
                    <div class="card-body">
                        {{#each comments as |comment|}}
                        <!-- Single comment-->
                        <div class="d-flex">
                            <div class="flex-shrink-0"><img class="rounded-circle"
                                    src="https://dummyimage.com/50x50/ced4da/6c757d.jpg" alt="..." /></div>
                            <div class="ms-3">
                                <div class="fw-bold">{{comment.username}}</div>
                                <div class="small text-muted">{{comment.createdAt}}</div>
                                <p>{{comment.comment}}</p>
                            </div>
                        </div>
                        {{/each}}
                        <!-- Comment form-->
                        {{#if logged_in}}
                        <form class="mb-4" id="comment-form"><textarea class="form-control" rows="3"
                                placeholder="Join the discussion and leave a comment!" id="comment-content"></textarea>
                        </form>
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-primary text-uppercase" type="submit">Add Comment</button>
                        </div>
                        {{else}}
                        <div class="d-flex justify-content-end">
                            <a href="/login" class="btn btn-primary text-uppercase">Login to Comment</a>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<script src="/js/blogpost.js"></script>