<!-- Page header with logo and tagline-->
<header class="py-5 bg-light border-bottom mb-4">
    <div class="container">
        <div class="text-center my-5">
            <h1 class="fw-bolder">welcome to a totally real tech blog</h1>
            <p class="lead mb-0">this blog is a place where u can share ur thoughts on all things tech. join our
                community and join the conversation!</p>
        </div>
    </div>
</header>
<!-- Page content-->
<div class="container">
    <div class="row">
        <!-- Blog entries-->
        <div class="col-lg-8">
            <!-- Featured blog post-->
            {{#each blogposts}}
            {{#if blogposts.[0]}}
            <div class="card mb-4">
                <div class="card-body" href="/blogpost/{{id}}">
                    <div class="small text-muted">{{created_at}}</div>
                    <h2 class="card-title">{{title}}</h2>
                    <a href="/profile/{{user_id}}">
                        <p class="small text-muted">{{user_id}}</p>
                    </a>
                    <p class="card-text">{{content}}</p>
                    <a class="btn btn-primary" href="/blogpost/{{id}}">Read more →</a>
                    <div class="card-footer small text-muted">Comments: {{totalComments}}</div>
                </div>
            </div>
            {{else}}
            <!-- Nested row for non-featured blog posts-->
            <div class="row">
                <div class="col-lg-12">
                    <!-- Blog post-->
                    <div class="card mb-4">
                        <div class="card-body" href="/blogposts/{{id}}">
                            <div class="small text-muted">{{created_at}}</div>
                            <h2 class="card-title h4">{{title}}</h2>
                            <a href="/profile/{{user_id}}">
                                <p class="small text-muted">{{user_id}}</p>
                            </a>
                            <p class="card-text">{{content}}</p>
                            <a class="btn btn-primary" href="/blogposts/{{id}}">Read more →</a>
                            <div class="card-footer small text-muted">Comments: {{totalComments}}</div>
                        </div>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
            <!-- Pagination-->
            <nav aria-label="Pagination">
                <hr class="my-0" />
                <ul class="pagination justify-content-center my-4">
                    <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1"
                            aria-disabled="true">Newer</a></li>
                    <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
                    <li class="page-item"><a class="page-link" href="#!">2</a></li>
                    <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
                    <li class="page-item"><a class="page-link" href="#!">Older</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
