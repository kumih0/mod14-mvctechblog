    <section>
        <h2>All Posts</h2>
        <div>
            {{#each blogposts}}
            <article>
                <div class="card-header">
                <h3><u>{{title}}</u></h3>
                </div>
                <div class="card-subtitle">
                <p><b>Author:</b> {{user_id}}</p>
                <p>Written on: {{created_at}}</p>
                </div>
                <div class="card-body">
                <p>{{content}}</p>
                </div>
                <div class="card-footer">
                <p>Comments: {{totalComments}}</p>
                </div>
            </article>
            {{/each}}
        </div>
    </section>

