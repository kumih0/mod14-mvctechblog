{{!-- Login and Signup Form --}}
<div class="row">
    <div class="col-md-6">
        <h2 class="mb-4">Login</h2>
        <form class="form login-form">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input name="email" type="email" class="form-control" id="email-login">
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" id="password-login">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2 class="mb-4">Signup</h2>
        <form class="form signup-form">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input name="email" type="email" class="form-control" id="email-signup">
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" id="password-signup">
                </div>
                <button type="submit" class="btn btn-primary" id="signup">Signup</button>
            </div>
        </form>
    </div>
</div>

<script src="../public/js/login.js"></script>